# Environment variables for RunAI Chat deployment
# Copy this file to .env and customize values
# All container names and ports will be automatically made dynamic if conflicts exist

# PostgreSQL Configuration
POSTGRES_DB=runai_chat
POSTGRES_USER=runai_user
POSTGRES_PASSWORD=runai_secure_password_2024
POSTGRES_PORT=5432
POSTGRES_CONTAINER=runai-postgres

# OpenWebUI Configuration
OPENWEBUI_PORT_1=3001
OPENWEBUI_PORT_2=3009
OPENWEBUI_1_CONTAINER=runai-openwebui-1
OPENWEBUI_2_CONTAINER=runai-openwebui-2
WEBUI_SECRET_KEY=your-super-secret-key-change-this-in-production

# NGINX Load Balancer (if using --profile with-loadbalancer)
NGINX_PORT=80
NGINX_CONTAINER=runai-loadbalancer

# Network Configuration
NETWORK_NAME=runai-network

# Dynamic Deployment Settings
# These settings control automatic conflict resolution
AUTO_RESOLVE_CONFLICTS=true
DYNAMIC_NAMING=true
DYNAMIC_PORTS=true

# Example dynamic names that will be used if conflicts exist:
# runai-postgres -> runai-postgres-1, runai-postgres-2, etc.
# runai-openwebui-1 -> runai-openwebui-1-1, runai-openwebui-1-2, etc.
# Ports: 5432 -> 5433, 5434, etc.
# Ports: 3001 -> 3002, 3003, etc.